# Database
DATABASE_URL="postgresql://newsletter_user:newsletter_pass@localhost:5432/catalyst_newsletter?schema=public"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Claude API Configuration
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
CLAUDE_MODEL="claude-sonnet-4-5-20250929" # Default: Sonnet 4.5. Change to claude-opus-4-1-20250805 for Opus 4.1

# Agent Configuration
AGENT_UPDATE_WEBHOOK="https://your-webhook-url.com/agent-update"
AGENT_CONFIG_PATH="./agent-configs"
AGENT_AUTO_UPDATE="true"

# GCP Configuration
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="europe-west1"  # Optional: defaults to europe-west1

# Authentication - GCP Identity Platform
GCP_SERVICE_ACCOUNT_KEY="path-to-service-account-key.json"
IDENTITY_PLATFORM_API_KEY="your-identity-platform-api-key"
DEFAULT_TENANT_ID="default-tenant"
ADMIN_EMAIL="admin@example.com"
# Admin password - stored in GCP Secret Manager during deployment for security
# Use a strong password and rotate regularly (every 90 days recommended)
# Never commit actual passwords to version control
ADMIN_PASSWORD="your-secure-admin-password"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Microsoft Entra OIDC (optional - for future SSO integration)
ENTRA_CLIENT_ID=""
ENTRA_CLIENT_SECRET=""
ENTRA_TENANT_ID=""
ENTRA_REDIRECT_URI=""